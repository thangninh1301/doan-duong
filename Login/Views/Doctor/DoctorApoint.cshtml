@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
<script>
    const backendUrl = "https://backend-btl-duong.mooo.com";
</script>
@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Identity
@using BackEnd.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<h1>Bác Sỹ Khám: Danh sách phiếu hẹn</h1>
<div class="">
    <input type="date" id="inputDate" />
    <input type="text" id="myInput" placeholder="Tìm Kiếm" />
    <button class="btn-group-circle btn btn-primary" id="btnSearch" data-bind="click: $root.search" >Tìm kiếm</button>
    <button class="btn-group-circle btn btn-primary" id="btnSearch" data-bind="click: $root.click" >Tất Cả</button>
</div>
<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {

        <input hidden type="text" id="doctorId" value=@UserManager.GetUserAsync(User).Result.Id>
        <div>
            <table>

                <tr>
                    <td>
                        <div>

                            <table class="table" id="t_D">
                                <thead>
                                    <tr>
                                        <th>Mã phiếu hẹn</th>
                                        <th>Bệnh nhân</th>
                                        <th>Thời gian gặp</th>
                                        <th>Khoa</th>
                                        <th>Yêu cầu khám</th>
                                        <th>Tiền sử</th>
                                        <th>Ngày gặp</th>
                                        <th>Bác sĩ điều trị</th>
                                        <th>Lời nhắc</th>
                                        <th>Trạng thái</th>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody id="search_table" data-bind="foreach:$root.arrays">
                                    <tr data-bind="style:{color: statusResult == 0 ? 'green':statusResult==1?'blue':'red'}">
                                        <td data-bind="text:idApoint"></td>
                                        <td data-bind="text:patient"></td>
                                        <td data-bind="text:timeMeetApoint"></td>
                                        <td data-bind="text:department"></td>
                                        <td data-bind="text:symptom"></td>
                                        <td data-bind="text:bgDisease"></td>
                                        <td data-bind="text:dateMeetApoint"></td>
                                        <td data-bind="text:doctor"></td>
                                        <td data-bind="text:decription"></td>
                                        <!-- ko if: statusResult == 5 -->
                                        <td data-bind="text:statusApoint == 3 ? 'Chưa có kết quả':  ''"></td>
                                        <!--/ko -->
                                        <!-- ko if: statusResult == 0 -->
                                        <td data-bind="text:statusApoint == 2 ? 'Kết quả chưa đầy đủ':  ''"></td>
                                        <!--/ko -->
                                        <!-- ko if: statusResult == 1 -->
                                        <td data-bind="text:statusApoint == 2 ? 'Kết quả đầy đủ':  ''"></td>
                                        <!--/ko -->
                                        <td>


                                            <!-- ko if: statusApoint==2 -->
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-bind="click: $root.listResult">phiếu xét nghiệm</button>
                                            <!-- /ko -->
                                            <!-- ko ifnot: statusApoint==2 -->
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-bind="click: $root.createResult">Tạo kết quả khám</button>
                                            <!-- /ko -->
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </td>

                </tr>
            </table>
        </div>

        <div id="createResult" class="modal" tabindex="-1">
            <div class="modal-dialog" style="width:100%;height:100vh" >
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title">Phiếu kết quả khám bệnh</h3>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div style="background-color:cornflowerblue">
                        <h2>Bệnh nhân</h2>
                        <p id="patient"></p>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="col-form-label" for="symptom" style="font-weight:bold">Chuẩn đoán</label>
                            <input class="form-control" type="text" id="diagnostic" />
                        </div>
                        <div class="mb-3">
                            <label class="col-form-label" for="dateMeet" style="font-weight:bold">Pháp đồ điều trị</label>
                            <textarea class="form-control" type="text" id="therapyRegiment" ></textarea>
                        </div>
                    </div>
                    
                    <div id="project-modal">
                        <div id="fieldGroupModal">
                            <div>
                                <div>                     
                                    <div>
                                        <div style="display:flex">
                                            <div class="col-md-12">
                                                <select class="form-control" id="idTest" data-bind="options: $root.arrayTest,
                                                  optionsText: 'name',
                                                  optionsValue: 'id',
                                                  optionsCaption: 'chọn loại test',
                                                ">
                                                </select>
                                            </div>
                                            <div class="col-md-12">
                                                <select class="form-control" id="idDoctorTest" data-bind="options: $root.arrayDoctorTest,
                                                      optionsText: 'lastName',
                                                      optionsValue: 'id',
                                                      optionsCaption: 'bác sĩ test',
                                                    ">
                                                </select>
                                            </div>
                                            <button type="button" class="btn green btn-circle" data-bind="click: $root.addTest"><i class="fa fa-plus"></i> <span> Thêm xét nghiệm</span></button>

                                        </div>
                                    </div>


                                    @*hien thi ds test*@
                                    <div class="col-md-12" >
                                        <div class="form" style="width:100%">
                                            <div class="col-md-12" style="padding:0px">
                                                <div class="table-scrollable">
                                                    <table class="table table-striped table-bordered table-advance table-hover">
                                                        <thead>
                                                            <tr>
                                                                <td class="control-label bold margin-top-10">
                                                                    Loai Test
                                                                </td>
                                                                <td class="control-label bold margin-top-10">
                                                                    Bác sỹ làm xét nghiệm
                                                                </td>
                                                                <td class="control-label bold margin-top-10">
                                                                    Chuẩn Doán
                                                                </td>
                                                               <td class="control-label bold margin-top-10">Kết quả xét nghiệm </td>
                                                                <td></td>
                                                            </tr>
                                                        </thead>
                                                        <tbody data-bind="foreach: $root.arrayListTest">
                                                            <tr>
                                                                <td data-bind="text:doctorTest.test.name"></td>
                                                                <td data-bind="text:doctorTest.lastName"></td>
                                                                <td data-bind="text:diagnostic"></td>                                                               
                                                                <td>
                                                                    <!--ko ifnot: urlFile=='' -->
                                                                    <a data-bind="attr: { href: 'http://127.0.0.1:8887/'+urlFile}">Click here</a>
                                                                    <!--/ko-->
                                                                </td>                                                  
                                                                <td>
                                                                    <button type="button" class="btn btn-danger" data-bind="click: $root.deleteTest">
                                                                        Xóa
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer" style="clear:left">
                        <div style="float:left;display:flex">  
                            <input name="" type="checkbox" id="status" style="font-weight:bold; margin-right:10px" />
                            <span>Xác nhận gửi cho bệnh nhân</span>
                        </div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-primary" data-bind="click:$root.save">Lưu</button>
                    </div>

                </div>
            </div>
        </div>



        @section Scripts{

            <script src="~/JsDoctor/Doctor.js"></script>
        }
    }

</div>